{
  "name": "couponmap",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/http-client": "^4.1.2",
    "@sap-cloud-sdk/resilience": "^4.1.2",
    "@sap/cds": "^9",
    "@sap/ux-ui5-tooling": "^1.19.1",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-coupons-app": "cds watch --open bigcomdtc_couponmap/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy couponmap --delete-services --delete-service-keys --delete-service-brokers",
    "watch-bigstores": "cds watch --open bigstores/index.html?sap-ui-xx-viewCache=false --livereload false",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"    
  },
  "cds": {
    "requires": {
      "connectivity": true,
      "destination": true,
      "uaa": {
        "kind": "xsuaa"
      },
      "db": {
        "kind": "hana",
        "model": [
          "db",
          "srv"
        ]
      },
      "BigCommerceAPI": {
        "kind": "rest",
        "credentials": {
          "destination": "BigCommerceAPI"
        }
      },
      "[production]": {
        "auth": "xsuaa"
      },
      "destinations": true,
      "html5-repo": true,
      "workzone": true
    }
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/coupons-app",
    "app/bigstores"    
  ]
}
